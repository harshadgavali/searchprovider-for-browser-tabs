{
  "compilerOptions": {
    "strict": true,
    "module": "es6",
    "target": "es6",
    "esModuleInterop": true,
    "sourceMap": false,
    "rootDir": "src",
    "outDir": "resources/js",
    "noEmitOnError": true,
    "jsx": "react",
    "lib": [
      "es6",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "@types/chrome"
    ],
    "noFallthroughCasesInSwitch": true,
  }
}